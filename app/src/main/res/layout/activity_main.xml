<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_swigato">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="25dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Swigato"
        android:textColor="#C5B41D"
        android:textSize="40dp"
        android:layout_margin="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:id="@+id/txtSwigato"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Explore Menu"
        android:layout_marginBottom="50dp"
        android:textColor="#D51757"
        android:textStyle="bold"
        android:layout_below="@+id/txtSwigato"
        android:layout_margin="34dp"
        android:textSize="25dp"
        android:id="@+id/txtMenu" />

    <TextView
        android:id="@+id/txtSnacks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMenu"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="- Snacks"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Main Course"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/txtSnacks"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:id="@+id/txtMainCourse" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="- Desert"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@+id/txtMainCourse"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:id="@+id/txtDesert" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPayBill"
        android:text="PayBill"
        android:textColor="#49BA4D"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:textStyle="bold"
        />

</RelativeLayout>

</RelativeLayout>